<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.hotelmanagementsystem.mapper.CustomerMapper">

    <select id="findCustomers" parameterType="org.example.hotelmanagementsystem.dto.CustomerQueryDto" resultType="org.example.hotelmanagementsystem.entity.Customer">
        SELECT * FROM customers WHERE 1=1
        <if test='id != null'>
            AND id = #{id}
        </if>
        <if test='name != null and name != ""'>
            AND name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test='phone != null and phone != ""'>
            AND phone LIKE CONCAT('%', #{phone}, '%')
        </if>
        <if test='email != null and email != ""'>
            AND email LIKE CONCAT('%', #{email}, '%')
        </if>
        <if test='idCard != null and idCard != ""'>
            AND id_card = #{idCard}
        </if>
        ORDER BY created_at DESC
    </select>

    <select id="getCustomerById" parameterType="java.lang.Integer" resultType="org.example.hotelmanagementsystem.entity.Customer">
        SELECT * FROM customers WHERE id = #{id}
    </select>

    <select id="getCustomerByIdCard" parameterType="java.lang.String" resultType="org.example.hotelmanagementsystem.entity.Customer">
        SELECT * FROM customers WHERE id_card = #{idCard}
    </select>

    <select id="getCustomerOrderHistory" parameterType="java.lang.Integer" resultType="org.example.hotelmanagementsystem.dto.OrderDto">
        SELECT o.*, r.room_type, r.room_number, h.id AS hotelId, h.name AS hotelName, h.address AS hotelAddress
        FROM orders o
        LEFT JOIN rooms r ON o.room_id = r.id
        LEFT JOIN hotels h ON r.hotel_id = h.id
        WHERE o.customer_id = #{customerId}
        ORDER BY o.created_at DESC
    </select>

    <insert id="insertCustomer" parameterType="org.example.hotelmanagementsystem.entity.Customer" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO customers(name, phone, email, id_card, created_at)
        VALUES(#{name}, #{phone}, #{email}, #{idCard}, #{createdAt})
    </insert>

    <update id="updateCustomer" parameterType="org.example.hotelmanagementsystem.entity.Customer">
        UPDATE customers
        <set>
            <if test='name != null'>name = #{name},</if>
            <if test='phone != null'>phone = #{phone},</if>
            <if test='email != null'>email = #{email},</if>
            <if test='idCard != null'>id_card = #{idCard},</if>
            created_at = #{createdAt}
        </set>
        WHERE id = #{id}
    </update>

</mapper>